<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="ERRFILE" class="ch.qos.logback.core.FileAppender">
        <file>${user.home}/.nobu/${nodeId:-node}-asado.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{MM/dd HH:mm:ss} %-5level[%.15thread] %logger{1} %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <!--appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>[%thread] >> [%-5level] %logger{36} >> %d{HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>
    </appender-->

    <root level="DEBUG">
        <appender-ref ref="ERRFILE"/>
    </root>
    <logger name="com.zaxxer.hikari">
        <level value="error"/>
    </logger>
    <logger name="sss.db">
        <level value="WARN"/>
    </logger>

</configuration>
